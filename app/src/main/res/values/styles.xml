<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#333</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleBtnDownload" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolBar_" parent="AppTheme.PopupOverlay">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- DIALOG STYLE -->
    <style name="styleDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="styleFilds">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/shape_background_white_border</item>
    </style>

    <style name="titleForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="alertError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_error2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="border_horizon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#dedede</item>
    </style>

    <style name="border_horizon_basic_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f2f2f2</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="setTitleLittle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="contCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="titleTopStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="subTitleTopStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="titleTopStore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="titleTableInformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="contTableInformation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/riple_rect_btn_download</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BtnHide">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
         <item name="android:drawableStart">@drawable/ic_keyboard_arrow_down_black_24dp</item>
        <item name="android:drawableLeft">@drawable/ic_keyboard_arrow_down_black_24dp</item>
        <item name="android:background">@drawable/riple_rect_default</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="rodapeLinks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/riple_rect_default</item>
    </style>

    <style name="titleQueries">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">@dimen/marginTitleQuery</item>
        <item name="android:layout_marginEnd">@dimen/marginTitleQuery</item>
        <item name="android:layout_marginStart">@dimen/marginTitleQuery</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
