<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:cardBackgroundColor="@color/colorError"
    app:cardCornerRadius="1dp"
    android:id="@+id/barStatus">
    <TextView
        android:id="@+id/contStatus"
        android:text="Status bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="5dp"
        android:drawableEnd="@drawable/ic_close_white_24dp"
        android:drawableRight="@drawable/ic_close_white_24dp"
        android:gravity="center|start"/>
</android.support.v7.widget.CardView>