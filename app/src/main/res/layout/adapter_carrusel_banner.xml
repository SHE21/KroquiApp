<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentBanner"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/shape_banner_store">

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_back_banner_001"
        android:background="@drawable/riple_rect_white"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/banTitle"
            android:text="10 novas camadas"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:shadowRadius="1"
            android:shadowColor="#c7000000"
            android:shadowDx="-2"
            android:shadowDy="1"/>

        <TextView
            android:id="@+id/banMenssage"
            android:text="Novas camadas para seus projetos"
            android:textSize="16sp"
            android:textColor="#c2ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>

</FrameLayout>