<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aygus.kroquiapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivitySplash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityProject"
            android:label="@string/title_activity_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityNewAccount" />
        <activity android:name=".ActivitySettings" />
        <activity
            android:name=".ActivityLayers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityAtiveKey" />
        <activity android:name=".ActivityAllInfo" />
        <activity android:name=".ActivityLicense" />
        <activity
            android:name=".ActivityStore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Utils.FileBrowserActivity" />
        <activity
            android:name=".Utils.AndroidFileBrowserExampleActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="File browser">
            <intent-filter>
                <action android:name="SELECT_DIRECTORY_ACTION" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityStyleLayer"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityStoreLayers"
            android:label="@string/title_activity_store_layers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityStoreDetails"
            android:label="@string/title_activity_store_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>